# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Set Win as the mod key.
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FiraCode Nerd Font Mono 12

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
# These are used in the included files.
set $ws1 "1: "
set $ws2 "2: 󰈹"
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

include ~/.config/i3/config.d/assignments.conf
include ~/.config/i3/config.d/colors.conf
include ~/.config/i3/config.d/keybinds.conf

title_align center

# Removed title bars from split containers.
default_border none

gaps top -10
gaps inner 10

# Theme-switching
exec --no-startup-id darkman run
exec --no-startup-id systemctl start --user xsettingsd

# SSH agent. Key lifetime is 30 minutes.
exec --no-startup-id ssh-agent -D -a ${SSH_AUTH_SOCK} -t 30m

# IMF
exec --no-startup-id ibus-daemon -rxRd

# Notifications
exec --no-startup-id dunst -startup_notification

# Bars
exec --no-startup-id start-polybar

# Startup apps
exec --no-startup-id discord
