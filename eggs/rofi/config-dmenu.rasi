@theme "common"

window {
    // Center the listview rather than the entire window.
    y-offset: -1em;
}

mainbox {
    children: [message, listview];
}

listview {
    border-radius:  12px;
}

message {
    margin: 0 0 1em 0;
    border-radius: 12px;
    border: 2px;
    border-color: var(foreground);
}
textbox {
    background-color: inherit;
    text-color: inherit;
    horizontal-align: 0.5;
}
