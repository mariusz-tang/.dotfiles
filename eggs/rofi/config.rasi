configuration {
    font: "FiraCode Nerd Font Mono 20";
    terminal: "alacritty";
    sort: true;
    sorting-method: "fzf";
    // Make these four characters long for alignment purposes.
    display-window: "wind";
    display-run: " run";
    display-ssh: " shh";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "gruvbox"
